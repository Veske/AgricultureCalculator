<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="veske.com.agriculturecalculator.germinative.GerminativeActivity" >

    <TableLayout
        android:id="@+id/mainMenuLayout"
        android:padding="10dip"
        android:isScrollContainer="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:id="@+id/mainMenuRow0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:text="@string/title_activity_germinative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>

        </TableRow>

        <TableRow
            android:id="@+id/mainMenuRow9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minHeight="30dp">


            <TextView
                android:id="@+id/puhtus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Puhtuse %" />

            <Space
                android:layout_width="16dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editPuhtus"
                android:background="@drawable/input_field_style"
                android:hint="0%"/>


        </TableRow>

        <Space
            android:layout_height="20dp"/>

        <TableRow
            android:id="@+id/mainMenuRow10"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/teraMass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="1000 tera mass, g" />



            <Space
                android:layout_width="16dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTeraMass"
                android:background="@drawable/input_field_style"
                android:hint="0g"/>
        </TableRow>

        <Space
            android:layout_height="20dp"/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/kylviseNorm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idanevuse %"
                android:textSize="20sp" />

            <Space
                android:layout_width="16dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editKylviseNorm"
                android:background="@drawable/input_field_style"
                android:hint="0%" />
        </TableRow>

        <Space
            android:layout_height="20dp"/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">



        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/button"
        android:text="Arvuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field_style"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
