<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="veske.com.agriculturecalculator.germinative.GerminativeActivity" >

    <TableLayout
        android:id="@+id/mainMenuLayout"
        android:padding="10dip"
        android:isScrollContainer="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:id="@+id/mainMenuRow0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:text="@string/title_activity_germinative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>

        </TableRow>

        <TableRow
            android:id="@+id/mainMenuRow9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minHeight="30dp">


            <TextView
                android:id="@+id/puhtus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:textSize="20sp"
                android:text="Puhtuse %" />

            <Space
                android:layout_width="13dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".60"
                android:padding="3dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editPuhtus"
                android:background="@drawable/input_field_style"
                android:hint="0 %"/>


        </TableRow>

        <Space
            android:layout_height="20dp"/>

        <TableRow
            android:id="@+id/mainMenuRow10"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/teraMass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:textSize="20sp"
                android:text="1000 tera mass, g" />

            <Space
                android:layout_width="13dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".60"
                android:padding="3dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTeraMass"
                android:background="@drawable/input_field_style"
                android:hint="0 g"/>
        </TableRow>

        <Space
            android:layout_height="20dp"/>

        <TableRow
            android:id="@+id/mainMenuRow11"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/idanevTera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:textSize="20sp"
                android:text="Idanevat tera"/>

            <Space
                android:layout_width="13dp"/>

            <EditText
                android:id="@+id/editIdanevTera"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".60"
                android:padding="3dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:background="@drawable/input_field_style"
                android:hint="0 m2"/>
        </TableRow>

        <Space
            android:layout_height="20dp"/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/idanevus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:text="Idanevuse %"
                android:textSize="20sp"/>

            <Space
                android:layout_width="13dp"/>

            <EditText
                android:id="@+id/editIdanevus"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".60"
                android:padding="3dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:background="@drawable/input_field_style"
                android:hint="0 %"/>
        </TableRow>

        <Space
            android:layout_height="20dp"/>
    </TableLayout>

    <Button
        android:id="@+id/calculateGerminative"
        android:text="Arvuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainMenuLayout"
        android:background="@drawable/input_field_style"
        android:layout_centerHorizontal="true"
        android:onClick="calculateGerminative"/>

    <TextView
        android:id="@+id/textViewCalculationResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/calculateGerminative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="40sp"/>

</RelativeLayout>
