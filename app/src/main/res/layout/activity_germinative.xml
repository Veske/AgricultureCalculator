<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="veske.com.agriculturecalculator.germinative.GerminativeActivity">

    <TextView
        android:text="@string/title_activity_germinative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>

    <TextView
        android:id="@+id/puhtus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puhtuse %"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editPuhtus"
        android:layout_alignBottom="@+id/puhtus"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/teraMass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 tera mass, g"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|"
        android:ems="10"
        android:id="@+id/editTeraMass"
        android:layout_alignBottom="@+id/teraMass"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/kylviseNorm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idanevuse %"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editKylviseNorm"
        android:layout_alignBottom="@+id/kylviseNorm"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
