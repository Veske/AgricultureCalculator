<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="veske.com.agriculturecalculator.germinative.GerminativeActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <TableLayout
            android:padding="10dip"
            android:isScrollContainer="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minHeight="30dp">


                <TextView
                    android:id="@+id/puhtus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:textSize="20sp"
                    android:text="Puhtuse %"
                    android:textAllCaps="true"/>

                <Space
                    android:layout_width="13dp"/>

                <Button
                    android:id="@+id/showToast"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/info"
                    android:onClick="showInfoToast"/>


            </TableRow>

            <Space
                android:layout_height="3dp"/>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minHeight="30dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".60"
                    android:padding="3dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editPuhtus"
                    android:background="@drawable/input_field_style"
                    android:hint="0 %"/>
            </TableRow>

            <Space
                android:layout_height="20dp"/>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <TextView
                    android:id="@+id/teraMass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:textSize="20sp"
                    android:text="1000 tera mass, g"
                    android:textAllCaps="true"/>
            </TableRow>

            <Space
                android:layout_height="3dp"/>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".60"
                    android:padding="3dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editTeraMass"
                    android:background="@drawable/input_field_style"
                    android:hint="0 g"/>
            </TableRow>

            <Space
                android:layout_height="20dp"/>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <TextView
                    android:id="@+id/idanevTera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:textSize="20sp"
                    android:text="Idanevat tera"
                    android:textAllCaps="true"/>

                <Space
                    android:layout_width="13dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/info"
                    android:textSize="15sp"
                    android:onClick="showInfoToast"/>
            </TableRow>

            <Space
                android:layout_height="3dp"/>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <EditText
                    android:id="@+id/editIdanevTera"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".60"
                    android:padding="3dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:background="@drawable/input_field_style"
                    android:hint="0 m2"/>
            </TableRow>

            <Space
                android:layout_height="20dp"/>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/idanevus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:text="Idanevuse %"
                    android:textSize="20sp"
                    android:textAllCaps="true"/>
            </TableRow>

            <Space
                android:layout_height="3dp"/>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <EditText
                    android:id="@+id/editIdanevus"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".60"
                    android:padding="3dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:background="@drawable/input_field_style"
                    android:hint="0 %"/>
            </TableRow>

            <Space
                android:layout_height="20dp"/>
        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textViewCalculationResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        android:layout_below="@+id/scrollView"
        android:layout_above="@+id/calculateGerminative"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/calculateGerminative"
        android:text="Arvuta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field_style"
        android:onClick="calculateGerminative"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
